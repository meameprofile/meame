{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["content/*"],
      "@messages/*": ["src/messages/*"],
      "@prompts/*": ["prompts/*"],
      "@scripts/*": ["scripts/*"],
      "@shared/*": ["src/shared/*"],
      "@store/*": ["src/store/*"],
      "@types/*": ["src/types/*"],
      "@app/[locale]/(public)/*": ["src/app/[locale]/(public)/*"]
    },
    "types": ["jest", "node"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.setup.ts",
    "tests/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist", "supabase"]
}
